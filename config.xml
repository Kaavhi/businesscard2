<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		id          = "myfirstapp"
        version     = "1.0.0" >

	<platform name="android" >
        <splash density="land-mdpi" src="res/drawable-mdpi/splash.9.png" />
        <splash density="land-hdpi" src="res/drawable-hdpi/splash.9.png" />
        <splash density="land-xhdpi" src="res/drawable-xhdpi/splash.9.png" />
        <splash density="land-xxhdpi" src="res/drawable-xxhdpi/splash.9.png" />
        <splash density="land-xxxhdpi" src="res/drawable-xxxhdpi/splash.9.png" />
        <splash density="port-mdpi" src="res/drawable-mdpi/splash.9.png" />
        <splash density="port-hdpi" src="res/drawable-hdpi/splash.9.png" />
        <splash density="port-xhdpi" src="res/drawable-xhdpi/splash.9.png" />
        <splash density="port-xxhdpi" src="res/drawable-xxhdpi/splash.9.png" />
		<splash density="port-xxxhdpi" src="res/drawable-xxxhdpi/splash.9.png" />
	</platform>
	
	<splash src="splash.png" />
	
	<preference name="SplashScreen" value="screen"/>
	<preference name="SplashScreenDelay" value="5000" />
	
	<plugin name="cordova-plugin-device" spec="2.0.1" />
	<plugin name="cordova-plugin-dialogs" spec="2.0.1" />
	<plugin name="cordova-plugin-network-information" spec="1.3.4" />
	<plugin name="cordova-plugin-device-motion" spec="1.2.5"/>
	<plugin name="cordova-plugin-splashscreen" spec="4.0.0"/>

</widget>